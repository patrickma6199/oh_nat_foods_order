<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_mainImage"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ohnatfoodshome" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ohnaturalfoodsicon"
        android:text="Oh Natural Foods Preordering"
        android:textColor="#046305"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="23dp"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_orderButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:backgroundTint="#4CAF50"
        android:text="ORDER NOW"
        android:textSize="20dp"
        android:onClick="onLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_mainImage" />

    <Button
        android:id="@+id/main_registerButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="REGISTER"
        android:onClick="onRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_orderButton" />

    <TextView
        android:id="@+id/main_bottomBar"
        android:layout_width="415dp"
        android:layout_height="70dp"
        android:background="#EFEF5B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_homeButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="HOME"
        android:textSize="25dp"
        android:onClick="onHome"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/main_accountButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="128dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="ACCOUNT"
        android:textAlignment="center"
        android:textSize="25dp"
        android:onClick="onLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_logButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="264dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="LOGIN"
        android:onClick="onLogin"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>