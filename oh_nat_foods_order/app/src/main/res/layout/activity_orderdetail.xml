<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".orderdetail">

    <TextView
        android:id="@+id/main_bottomBar2"
        android:layout_width="415dp"
        android:layout_height="70dp"
        android:background="#ffff00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_homeButton2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="HOME"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_accountButton2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="128dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="ACCOUNT"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_logButton2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/main_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ohnaturalfoodsicon"
        android:fontFamily="serif"
        android:text="Oh Natural Foods Preordering"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="23dp"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailProdDescText"
        android:layout_width="365dp"
        android:layout_height="425dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/border2"
        android:paddingLeft="10dp"
        android:paddingTop="60dp"
        android:paddingRight="10dp"
        android:text="@string/detailDesc"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/detailCommentEdit"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="295dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:outlineAmbientShadowColor="#4CAF50"
        android:outlineProvider="paddedBounds"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/detailComment"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailOptions"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="375dp"
        android:background="#FFFFBE"
        android:text="@string/detailCustom"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/detailOptionSpinner"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="375dp"
        android:background="@drawable/border"
        android:entries="@array/detailCustomArray"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailProdText"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="580dp"
        android:fontFamily="serif"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/detailProduct"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#046305"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCartButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="130dp"
        android:backgroundTint="#046305"
        android:text="@string/detailAddCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>