<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ordersProductHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ordersProductImageHolder"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ordersProductImage"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="viewProduct" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ordersProductNameHolder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/ordersProductNameText"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:onClick="viewProduct"
                android:paddingTop="40dp"
                android:text="@string/ordersProductName"
                android:textColor="#046305"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ordersProductPriceHolder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/ordersProductPriceText"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingTop="40dp"
                android:text="@string/ordersProductPrice"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>